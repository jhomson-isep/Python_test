<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="imc_helpdesk_team_form_inherit" model="ir.ui.view">
            <field name="name">imc.helpdesk.team.form.inherit</field>
            <field name="model">helpdesk.team</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_team_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='assign_method']" position="after">
                    <field name="ticket_notify" widget="many2many_tags"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>