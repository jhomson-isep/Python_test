<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="imc_helpdesk_ticket_form_inherit" model="ir.ui.view">
            <field name="name">imc.helpdesk.ticket.form.inherit</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="ticket_res" widget="many2many_tags"
                           required="1"/>
                    <field name="total_requirements" groups="base.group_system"></field>
                    <field name="resolved_requirements" groups="base.group_system"></field>
                </xpath>

                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="ticket_res" widget="many2many_tags"
                           required="1"/>
                    <field name="require_project" groups="base.group_system" widget="boolean_toggle"></field>
                    <field name="month" groups="base.group_system" widget="selection"></field>
                </xpath>

                <field name="tag_ids" position="attributes">
                    <attribute name="attrs">{'required': 1}</attribute>
                </field>

                <field name="ticket_type_id" position="attributes">
                    <attribute name="attrs">{'required': 1}</attribute>
                </field>
            </field>
        </record>
    </data>
</odoo>