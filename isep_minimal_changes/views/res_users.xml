<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id='res_users_is_commercial_inherit' model='ir.ui.view'>
            <field name='name'>Res users add commercial field</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='messaging']" position="before">
                    <group string="Isep" name="isep">
                        <field name="is_commercial"/>
                    </group>
                </xpath>

                <xpath expr="//field[@name='signature']" position="after">
                    <field name="is_commercial"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>