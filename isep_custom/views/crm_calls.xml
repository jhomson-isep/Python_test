<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="llamadas_filtradas" model="ir.actions.act_window">
        <field name="name">Llamadas</field>
        <field name="res_model">llamadas.isep</field>
        <field name="view_mode">tree,calendar,form</field>
        <field name="domain">[('telefono','=',context.get('telf'))]</field>
    </record>

    <record id="view_call_form" model="ir.ui.view">
        <field name="name">call.form</field>
        <field name="model">llamadas.isep</field>
        <field name="arch" type="xml">
            <form string="Llamadas">
                <div class="oe_button_box" name="button_box">
                    <button class="oe_inline oe_stat_button" type="action"
                        name="%(llamadas_filtradas)d"
                        icon="fa-phone"
                        string="Llamadas"
                        context="{'telf': telefono}">
                        <!--<field string="Llamadas" name="recuento_llamadas" widget="statinfo"/>-->
                    </button>
                </div>
                <group col="4">
                    <field name="name" colspan="2"/>
                </group>
                <group>
                    <group string="Información de la llamada">
                        <field name="date_ini"/>
                        <field name="date_out"/>
                        <field name="duracion" widget="float_time"/>
                        <field name="extension"/>
                        <field name="empleado"/>
                        <field name="check_employee" invisible="1"/>
                    </group>
                    <group string="Información del cliente">
                        <field name="telefono"/>
                        <field name="entidad"/>
                        <field name="llamadas_id"/>
                        <field name="employee"/>
                        <field name="opportunity_id"/>
                    </group>
                </group>
                <group string="Detalles">
                    <field name="notas"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_call_tree" model="ir.ui.view">
        <field name="name">call.tree</field>
        <field name="model">llamadas.isep</field>
        <field name="arch" type="xml">
            <tree string="Llamadas entrantes">
                <field name="llamadas_id"/>
                <field name="empleado"/>
                <field name="date_ini"/>
                <field name="duracion" widget="float_time"/>
                <field name="efectiva" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="call_search_form_view" model="ir.ui.view">
        <field name="name">call.search</field>
        <field name="model">llamadas.isep</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Filtrar contacto efectivo">
                <filter string="Contacto efectivo" name="efectivo" domain="[('efectiva','=','True')]"/>
            </search>
        </field>
    </record>
    

    <record id="crm_llamadas" model="ir.actions.act_window">
        <field name="name">Llamadas</field>
        <field name="res_model">llamadas.isep</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem name="Centralita Buena" id="llamadas_isep_menu"/>

    <menuitem action="crm_llamadas" id="crm_llamadas_menu" parent="llamadas_isep_menu"
              name="Llamadas" sequence="10"/>
</odoo>