<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="isep_report_footer" inherit_id="report.external_layout_footer">
			<xpath expr="//li[@t-if='company.vat']" position="replace">
				<li t-if="company.vat and not company.vat">TIN: <span t-field="company.vat"/></li>
			</xpath>
		</template>

        <template id="isep_report_header" inherit_id="report.external_layout_header">
			<xpath expr="//div[@name='company_address']" position="replace">
				<div class="col-xs-3" name="company_address">
                    <div t-field="company.partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;,&quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>
                    <span t-field="company.vat"  style="border-bottom: 1px solid black;"/>
                </div>
			</xpath>

			<xpath expr="//div[@class='col-xs-9 text-right']" position="replace">
				<div class="col-xs-9 text-right" style="margin-top:20px;" t-if="company_id.id!=14" t-field="company.rml_header1"/>
			</xpath>
		</template>
