<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_op_area_course_tree" model="ir.ui.view">
            <field name="name">op.area.course.tree</field>
            <field name="model">op.area.course</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Areas de los Cursos">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>
        <record id="view_op_area_course_form" model="ir.ui.view">
            <field name="name">op.area.course.form</field>
            <field name="model">op.area.course</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Areas de los Cursos">
                    <sheet>
                        <group col="4">
                           <field name="name"/>
                            <field name="code"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_op_area_course_search" model="ir.ui.view">
            <field name="name">op.area.course.search</field>
            <field name="model">op.area.course</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Areas de los Cursos">
                   <field name="name"/>
                    <field name="code"/>
                    <newline/>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_op_area_course_view">
            <field name="name">Area del Curso</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.area.course</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_op_area_course_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_op_area_course_view_form">
            <field name="act_window_id" ref="act_open_op_area_course_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_op_area_course_form"/>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_op_area_course_view_tree">
            <field name="act_window_id" ref="act_open_op_area_course_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_op_area_course_tree"/>
        </record>
    </data>
</odoo>