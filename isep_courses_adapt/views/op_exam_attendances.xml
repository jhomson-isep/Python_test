<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_op_exam_attendees_tree_inherit" model="ir.ui.view">
            <field name="name">Exam attendees tree inherited</field>
            <field name="model">op.exam.attendees</field>
            <field name="inherit_id" ref="openeducat_exam.view_op_exam_attendees_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='exam_id']" position="after">
                    <field name="course_id"/>
                    <field name="batch_id"/>
                    <field name="subject_id"/>
                </xpath>
                <xpath expr="//field[@name='room_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_op_exam_attendees_form_inherit" model="ir.ui.view">
            <field name="name">Exam attendees form inherited</field>
            <field name="model">op.exam.attendees</field>
            <field name="inherit_id" ref="openeducat_exam.view_op_exam_attendees_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='room_id']" position="replace">
                    <field name="course_id"/>
                    <field name="batch_id"/>
                    <field name="course_type"/>
                    <field name="order"/>
                    <field name="modify"/>
                    <field name="admission_id"/>
                    <field name="original_marks"/>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_exam_attendees_view_grouped">
            <field name="name">Marks</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.exam.attendees</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="openeducat_exam.view_op_exam_attendees_search"/>
            <field name="domain">[]</field>
            <field name="context">{'group_by': 'course_id'}</field>
            <xpath expr="//field[@name='marks']" position="attributes">
                    <field name="avg">Average of marks</field>
            </xpath>
        </record>
    </data>
</odoo>
