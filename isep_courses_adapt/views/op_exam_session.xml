<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_op_exam_session_form_inherit" model="ir.ui.view">
            <field name="name">Exam session form inherited</field>
            <field name="model">op.exam.session</field>
            <field name="inherit_id" ref="openeducat_exam.view_op_exam_session_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='venue']" position="attributes">
                    <attribute name="required">0</attribute>
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
        <record id="view_op_exam_session_tree_inherit" model="ir.ui.view">
            <field name="name">Exam session tree inherited</field>
            <field name="model">op.exam.session</field>
            <field name="inherit_id" ref="openeducat_exam.view_op_exam_session_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='venue']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
