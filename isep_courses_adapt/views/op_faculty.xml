<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="ica_view_op_faculty_form_inherit" model="ir.ui.view">
            <field name="name">ica.op.faculty.form.inherit</field>
            <field name="model">op.faculty</field>
            <field name="inherit_id" ref="openeducat_core.view_op_faculty_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='emp_id']" position="after">
                    <field name="nifp"/>
                    <field name="job_title"/>
                    <field name="specialty"/>
                </xpath>

                 <notebook position="inside">
                    <page name="Documentación" string="Documentación">
                        <field name="document_ids" colspan="2" nolabel="1"/>
                    </page>
                </notebook>

            </field>
        </record>
    </data>
</odoo>