<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_google_drive_form" model="ir.ui.view">
        <field name="name">res.config.settings.google.drive.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="openeducat_core.res_config_settings_view_form_core."/>
        <field name="arch" type="xml">
            <xpath expr="//h2[@id='op_courses_moodle']" position="before">

                <h2 id="op_google_drive">Par√°metros de Google Drive</h2>
                <div class="row mt18 o_settings_container"
                     title="Specify different activities which is held in an institute.">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Id del Cliente</span>
                            <div class="text-muted">
                                Codigo de identificacion de Google
                                <field name="client_id"/>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Palabra Secreta del Cliente</span>
                            <div class="text-muted">
                                Palabra de acceso secreta para Google Drive
                                <field name="client_secret"/>
                            </div>
                        </div>
                    </div>

                </div>
            </xpath>
        </field>
    </record>
</odoo>