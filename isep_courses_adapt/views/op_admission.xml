<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_op_admission_form_inherit" model="ir.ui.view">
            <field name="name">Admission form inherited</field>
            <field name="model">op.admission</field>
            <field name="inherit_id" ref="openeducat_admission.view_op_admission_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='register_id']" position="replace">
                    <field name="register_id" domain="[('state', 'in', ['application','admission'])]"/>
                </xpath>
                <xpath expr="//field[@name='fees']" position="replace">
                    <field name="unsubscribed_date"/>
                    <field name="academic_record_closing"/>
                </xpath>
                <xpath expr="//field[@name='fees_term_id']" position="replace">
                    <field name="exam_on_campus"/>
                    <field name="temporary_leave"/>
                    <field name="mexico"/>
                    <field name="generation"/>
                    <field name="mx_documentation"/>
                </xpath>
                <xpath expr="//page[@name='personal_detail']" position="after">
                    <page name="documentation" string="Documentation">
                        <field name="document_ids"></field>
                    </page>
                </xpath>
                <xpath expr="//page[@name='admission_detail']/group" position="after">
                    <group>
                        <field name="observations" widget="text"/>
                    </group>
                </xpath>
                <xpath expr="//button[@name='open_student']" position="after">
                    <button name="create_moodle_user" states="done" string="Send Moodle" type="object" groups="base.group_system"/>
                </xpath>
            </field>
        </record>

        <record id="view_op_admission_tree_inherit" model="ir.ui.view">
            <field name="name">View op admission tree inherited</field>
            <field name="model">op.admission</field>
            <field name="inherit_id" ref="openeducat_admission.view_op_admission_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='course_id']" position="after">
                    <field name="batch_id"/>
                </xpath>

                <xpath expr="//field[@name='title']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>

        <record id="view_op_admission_search_inherit" model="ir.ui.view">
            <field name="name">Admision search inherited</field>
            <field name="model">op.admission</field>
            <field name="inherit_id" ref="openeducat_admission.view_op_admission_search"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="replace">
                    <search string="Admission Register">
                        <field name="student_id"/>
                        <field name="name"/>
                        <field name="course_id"/>
                        <field name="batch_id"/>
                        <field name="academic_record_closing"/>
                        <field name="due_date"/>
                        <field name="temporary_leave"/>
                        <field name="unsubscribed_date"/>
                        <filter name="new_admissions" string="New admissions"
                                domain="[('state','=', 'draft')]"/>
                        <separator/>
                    </search>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
