<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_op_faculty_subject_rel_tree" model="ir.ui.view">
            <field name="name">op.faculty.subject.rel.tree</field>
            <field name="model">op.faculty.subject.rel</field>
            <field name="arch" type="xml">
                  <tree string="Relacion Facultades/Asignaturas">
                    <field name="faculty_id"/>
                    <field name="subject_id"/>
                </tree>
            </field>
        </record>

        <record id="view_op_faculty_subject_rel_form" model="ir.ui.view">
            <field name="name">op.faculty.subject.rel.form</field>
            <field name="model">op.faculty.subject.rel</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Relacion Facultades/Asignaturas">
                    <sheet>
                        <group col="4">
                            <field name="faculty_id"/>
                            <field name="subject_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

         <record id="view_op_faculty_subject_rel_search" model="ir.ui.view">
            <field name="name">op.faculty.subject.rel.search</field>
            <field name="model">op.faculty.subject.rel</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Relacion Facultades/Asignaturas">
                    <field name="faculty_id"/>
                    <field name="subject_id"/>
                    <newline/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_op_faculty_subject_rel_view">
            <field name="name">Relaci√≥n de facultades asiganturas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.faculty.subject.rel</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_op_faculty_subject_rel_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_op_faculty_subject_rel_view_form">
            <field name="act_window_id" ref="act_open_op_faculty_subject_rel_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_op_faculty_subject_rel_form"/>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_op_faculty_subject_rel_view_tree">
            <field name="act_window_id" ref="act_open_op_faculty_subject_rel_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_op_faculty_subject_rel_tree"/>
        </record>

    </data>
</odoo>
