<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="isep_courses_adapt.view_op_batch_form_inherited" model="ir.ui.view">
            <field name="model">op.batch</field>
            <field name="inherit_id" ref="openeducat_core.view_op_batch_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='parent_id']" position="replace">
                    <field name="coordinator"/>
                </xpath>

                <xpath expr="//field[@name='course_id']" position="replace">
                    <field name="modality_id"/>
                    <field name="campus_id" attrs="{'required':[('modality_id', '=' ,1)]}"/>
                    <field name="students_limit"/>
                    <field name="uvic_program" attrs="{'invisible': [('user_company_id', '=', 1111)]}"/>
                    <field name="sepyc_program"/>
                    <field name="user_company_id" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='code']" position="after">
                    <field name="course_id"/>
                </xpath>

                <xpath expr="//form/sheet/group[@name='main']" position="after">
                    <notebook>
                        <page id="page_general_information" string="General information">
                            <group cols="4">
                                <sheet string="groups_info_batch">
                                    <group string="Academic information">
                                        <field name="expiration_days"/>
                                        <field name="date_diplomas"/>
                                        <field name="academic_year"/>
                                        <field name="generation"/>
                                    </group>
                                    <group string="SL">
                                        <field name="hours"/>
                                        <field name="credits"/>
                                        <field name="ects"/>
                                    </group>
                                    <group string="LATAM">
                                        <field name="practical_hours_total"/>
                                        <field name="independent_hours_total"/>
                                        <field name="theoretical_hours_total"/>
                                        <field name="hours_total"/>
                                        <field name="practical_hours_credits"/>
                                        <field name="independent_hours_credits"/>
                                        <field name="theoretical_hours_credits"/>
                                        <field name="credits_total"/>
                                    </group>
                                </sheet>
                                <group string="Other information">
                                    <field name="days_week"/>
                                    <field name="schedule"/>
                                    <field name="contact_class"/>
                                    <field name="type_practices"/>
                                </group>
                            </group>
                        </page>
                        <page id="page_student_lines" string="Students">
                            <field name="student_lines" attrs="{'readonly': True}">
                                <tree string="Student Lines" editable="bottom">
                                    <field name="student_id"/>
                                    <field name="course_id"/>
                                    <field name="roll_number"/>
                                </tree>
                            </field>
                        </page>
                        <page id="batch_subjects_rel" string="Subjects">
                            <field name="op_batch_subject_rel_ids">
                                <tree string="Subject lines">
                                    <field name="subject_id"/>
                                    <field name="hours"/>
                                    <field name="credits"/>
                                    <field name="ects"/>
                                    <field name="level"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </xpath>

                <xpath expr="//div[hasclass('oe_button_box')]/button[1]" position="before">
                    <button class="oe_stat_button" name="action_open_subjects" type="object" icon="fa-book">
                        <field name="subject_count" widget="statinfo" string="Subject(s)"/>
                    </button>
                </xpath>

                <xpath expr="//div[hasclass('oe_button_box')]/button[1]" position="before">
                    <button class="oe_stat_button" name="action_open_students" type="object" icon="fa-user">
                        <field name="student_count" widget="statinfo" string="Student(s)"/>
                    </button>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
