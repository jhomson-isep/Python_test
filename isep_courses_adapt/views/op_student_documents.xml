<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_op_student_documents_tree" model="ir.ui.view">
            <field name="name">op.student.documents.tree</field>
            <field name="model">op.student.documents</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="DocumentaciÃ³n del alumno">
                    <field name="document_type_id"/>
                    <field name="drive_url"/>
                    <field name="drive_id"/>
                    <field name="document_name" widget="url"/>
                    <button name="download_file" string="Descargar"
                            type="object"/>
                </tree>
            </field>
        </record>
        <record id="view_op_student_documents_form" model="ir.ui.view">
            <field name="name">op.student.documents.form</field>
            <field name="model">op.student.documents</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Documento del alumno">
                    <sheet>
                        <group col="4">
                            <field name="document_type_id"/>
                            <field name="drive_url"/>
                            <field name="drive_id"/>
                            <field name="document_name" />
                            <field name="file"  widget="binary" accept=".jpg, .jpeg, .png, .pdf" filename="filename"/>
                            <field name="filename" invisible="1" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_op_student_documents_search" model="ir.ui.view">
            <field name="name">op.student.documents.search</field>
            <field name="model">op.student.documents</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Lugares de trabajo">
                    <field name="document_type_id"/>
                    <field name="drive_url"/>
                    <field name="drive_id"/>
                    <field name="document_name"/>
                    <newline/>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window"
                id="act_open_op_student_documents_view">
            <field name="name">Lugar de trabajo</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.student.documents</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id"
                   ref="view_op_student_documents_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view"
                id="act_open_op_student_documents_view_form">
            <field name="act_window_id"
                   ref="act_open_op_student_documents_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_op_student_documents_form"/>
        </record>
        <record model="ir.actions.act_window.view"
                id="act_open_op_student_documents_view_tree">
            <field name="act_window_id"
                   ref="act_open_op_student_documents_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_op_student_documents_tree"/>
        </record>
    </data>
</odoo>
