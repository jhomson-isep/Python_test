<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_op_student_access_tree" model="ir.ui.view">
            <field name="name">op.student.access.tree</field>
            <field name="model">op.student.access</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Accesos del Alumno">
                    <field name="student_id"/>
                    <field name="student_access"/>
                    <field name="last_access"/>
                </tree>
            </field>
        </record>
        <record id="view_op_student_access_form" model="ir.ui.view">
            <field name="name">op.student.access.form</field>
            <field name="model">op.student.access</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Accesos del alumno">
                    <sheet>
                        <group col="4">
                            <field name="student_id"/>
                            <field name="student_access"/>
                            <field name="last_access"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_op_student_access_search" model="ir.ui.view">
            <field name="name">op.student.access.search</field>
            <field name="model">op.student.access</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Accesos">
                        <field name="student_id"/>
                        <field name="student_access"/>
                    <newline/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window"
                id="act_open_op_student_access_view">
            <field name="name">Lugar de trabajo</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.student.access</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id"
                   ref="view_op_student_access_search"/>
            <field name="student_id">[]</field>
            <field name="student_access">{}</field>
            <field name="last_access">{}</field>
        </record>

        <record model="ir.actions.act_window.view"
                id="act_open_op_student_access_view_form">
            <field name="act_window_id"
                   ref="act_open_op_student_access_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_op_student_access_form"/>
        </record>

        <record model="ir.actions.act_window.view"
                id="act_open_op_student_access_view_tree">
            <field name="act_window_id"
                   ref="act_open_op_student_access_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_op_student_access_tree"/>
        </record>

    </data>
</odoo>

