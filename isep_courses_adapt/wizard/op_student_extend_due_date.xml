<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="op_student_extend_due_date_wizard_form" model="ir.ui.view">
            <field name='name'>op.student.extend.due.date.wizard.form</field>
            <field name='model'>op.student.extend.due.date.wizard</field>
            <field name='arch' type='xml'>
                <form string='Extend Due Date Admission Wizard'>
                    <sheet>
                        <separator string="Extend Due Date Admission Student"/>
                        <group colspan="4">
                            <field name="admission_ids" widget="many2many_tags"/>
                            <field name="months_to_extend" attrs="{'invisible':[('admission_ids','=',False)]}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name='extend' string='Extend Months'
                            class='oe_highlight'
                            type='object' />
                        <button special="cancel" string="Cancel" type="object" class="btn btn-secondary oe_inline"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="extend_due_date_act" name="Extend Due Date"
                    res_model="op.student.extend.due.date.wizard" src_model="op.student"
                    view_mode="form" target="new" view_type="form"
                    groups="openeducat_core.group_op_back_office_admin"/>
</odoo>