<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="op_moodle_admission_wizard_form" model="ir.ui.view">
        <field name='name'>op.moodle.admission.wizard.form</field>
        <field name='model'>op.moodle.admission.wizard</field>
        <field name='arch' type='xml'>
            <form string='Matricular'>
                <sheet>
                    <separator string="Registro de alumno: "/>
                    <div class="container mt16 mb16">
                        <h5 style="color: #666666">Esta ventana se encarga de matricular al alumno en los modulos de Campus Isep que sean
                        seleccionados en la parte de abajo. Puedes seleccionar mas de uno.</h5>
                    </div>
                    <notebook>
                        <page name="moodle_courses" string="Moodle courses">
                            <field name="moodle_course_line_ids" colspan="2" nolabel="1">
                                <tree string="Moodle course Details" create="false" delete="false">
                                    <field name="selected" widget="boolean_toggle"/>
                                    <field name="course_name"/>
                                    <field name="moodle_course_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name='enroll_student' string='Enroll Student'
                            class='oe_highlight'
                            type='object'/>
                    <button special="cancel" string="Cancel" type="object" class="btn btn-secondary oe_inline"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="op_moodle_admission_wizard_act" name="MoodLe Admission Wizard"
                res_model="op.moodle.admission.wizard" src_model="op.admission"
                view_mode="form" target="new" view_type="form"
                groups="openeducat_core.group_op_back_office_admin"/>

</odoo>