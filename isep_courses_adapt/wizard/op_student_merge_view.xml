        <record id="base_student_merge_automatic_wizard_form" model="ir.ui.view">
            <field name='name'>op.student.merge.wizard.form</field>
            <field name='model'>op.student.merge.wizard</field>
            <field name='arch' type='xml'>
                <form string='Automatic Merge Wizard'>
                    <sheet>
                        <separator string="Merge the following Student"/>
                        <group colspan="4">
                            <field name="student_ids" nolabel="1">
                                <tree string="Partners">
                                    <field name="id" />
                                    <field name="display_name" />
                                    <field name="email" />
                                    <field name="is_company" />
                                    <field name="vat" />
                                    <field name="country_id" />
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <footer>
                        <button name='action_merge' string='Merge Students'
                            class='oe_highlight'
                            type='object' />
                        <button special="cancel" string="Cancel" type="object" class="btn btn-secondary oe_inline"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window
            id="action_student_merge"
            res_model="op.student.merge.wizard"
            src_model="op.student"
            target="new"
            multi="True"
            view_mode="form"
            name="Merge Students"/>
</odoo>
