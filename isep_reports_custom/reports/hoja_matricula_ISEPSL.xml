<?xml version="1.0" encoding="utf-8" ?>
<template id="Prematricula_ISEP_España">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page">
                    <div id="header" class="row">
                        <hr style="border:7px solid #547494;, margin-bottom:0px;"></hr>
                        <div class="col-6"><img src="../static/src/logo.png"></img></div>
                        <div class="col-6">
                            <!--Iconos en dos renglones cada uno-->
                            <div class="row">
                                <div class="col-6"></div>
                                <div class="col-6"></div>
                            </div>
                            <div class="row">
                                <div class="col-6"></div>
                                <div class="col-6"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <!--#547494 <- Azul del HR-->
                        <hr style="border:3px solid #547494;, margin-bottom:0px;"></hr>
                        <div class="col-4" style="background-color: #fc6c04">
                            <strong>DATOS PERSONALES DEL ALUMNO</strong>
                        </div>
                    </div>
                    <div id="personal_information"  class="row">
                        <!--Primera Columna-->
                        <div class="col-6">
                            <div class="row">
                                <div class="col-6"><strong>Nombre:</strong></div>
                                <div class="col-6"><span t-field="o.partner_id.name"></span></div>
                            </div>
                            <div class="row">
                                <div class="col-6"><strong>RFC/Pasaporte:</strong></div>
                                <div class="col-6"><span t-field="o.partner_id.vat"></span></div>
                            </div>
                            <div class="row">
                                <div class="col-6"><strong>Domicilio:</strong></div>
                                <div class="col-6"><span t-field=""></span></div>
                            </div>
                            <div class="row">
                                <div class="col-6"><strong>Población:</strong></div>
                                <div class="col-6"><span t-field=""></span></div>
                            </div>
                            <div class="row">
                                <div class="col-6"><strong>Movil:</strong></div>
                                <div class="col-6"><span t-field="o.parter_id.mobile"></span></div>
                            </div>
                            <div class="row">
                                <div class="col-6"><strong>Email:</strong></div>
                                <div class="col-6"><span t-field="o.partner_id.email"></span></div>
                            </div>
                            <div class="row">
                                <div class="col-6"><strong>Universidad:</strong></div>
                                <div class="col-6"><span t-field=""></span></div>
                            </div>
                            <div class="row">
                                <div class="col-6"><strong>Estudios:</strong></div>
                                <div class="col-6"><span t-field=""></span></div>
                            </div>
                        </div>
                        <!--Segunda Columna-->
                        <div class="col-6">
                            <div class="row">
                                <div class="col-6"><strong>Nacimiento:</strong></div>
                                <div class="col-6"><span t-field=""></span></div>
                            </div>
                            <div class="row">
                                <div class="col-6"><strong>País:</strong></div>
                                <div class="col-6"><span t-field="o.partner_id.country"></span></div>
                            </div>
                            <div class="row">
                                <div class="col-6"><strong>Estado:</strong></div>
                                <div class="col-6"><span t-field=""></span></div>
                            </div>
                            <div class="row">
                                <div class="col-6"><strong>C.P:</strong></div>
                                <div class="col-6"><span t-field=""></span></div>
                            </div>
                            <div class="row">
                                <div class="col-6"><strong>Teléfono Fijo;</strong></div>
                                <div class="col-6"><span t-field="o.parter_id.phone"></span></div>
                            </div>
                            <div class="row">
                                <div class="col-6"><strong>Asesor</strong></div>
                                <div class="col-6"><span t-field="o.partner_id.user_id.name"></span></div>
                            </div>
                            <div class="row">
                                <div class="col-6"><strong>Finalizados</strong></div>
                                <div class="col-6"><span t-field=""></span></div>
                            </div>
                            <div class="row">
                                <div class="col-6"><strong>Profesión:</strong></div>
                                <div class="col-6"><span t-field=""></span></div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </t>
</template>
