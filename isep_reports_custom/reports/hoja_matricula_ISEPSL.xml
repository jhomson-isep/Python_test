<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <report id="report_prematricula_isep_espana"
                model="sale.order"
                string="Prematricula ISEP España"
                report_type="qweb-pdf"
                name="isep_reports_custom.prematricula_isep_espana"
                menu="True"/>

        <template id="prematricula_isep_espana">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <div class="page">
                            <!--Header de la factura-->
                            <div class="header">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="row"><strong style="color:#547494;">Universidad</strong></div>
                                        <div class="row">
                                            <img class="img-fluid"
                                                 src="/isep_reports_custom/static/src/img/logo_isep.png"
                                                 style="height:125px;padding-top:2px;"/>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <!--Iconos en dos renglones cada uno-->
                                        <div class="row">
                                            <div class="col-6">
                                                <img src="/isep_reports_custom/static/src/img/icono1.png"/>
                                                <strong style="color:#fc6c04;">+34 93 847 77 77</strong>
                                            </div>
                                            <div class="col-6">
                                                <img src="/isep_reports_custom/static/src/img/icono2.png"/>
                                                <strong style="color:#fc6c04;">Barcelona@isep.es</strong>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6">
                                                <img src="/isep_reports_custom/static/src/img/icono1.png"/>
                                                <strong style="color:#fc6c04;">http://www.isep.es/</strong>
                                            </div>
                                            <div class="col-6">
                                                <img src="/isep_reports_custom/static/src/img/icono2.png"/>
                                                <strong style="color:#fc6c04;">B61254314</strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--Primera Seccion #547494 <- Azul del HR-->
                            <hr style="border:3px solid #547494; margin-bottom:1px;"></hr>
                            <div class="row">
                                <div class="col-5" style="background-color: #fc6c04">
                                    <strong style="color:white; margin-left:5px;">DATOS PERSONALES DEL ALUMNO</strong>
                                </div>
                            </div>
                            <div id="personal_information"  class="row">
                                <!--Primera Columna-->
                                <div class="col-6">
                                    <div class="row">
                                        <div class="col-4"><strong>Nombre:</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.name"></span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"><strong>RFC/Pasaporte:</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.vat"></span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"><strong>Domicilio:</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.street"></span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"><strong>Población:</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.city"></span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"><strong>Movil:</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.mobile"></span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"><strong>Email:</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.email"></span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"><strong>Universidad:</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.x_universidad"></span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"><strong>Estudios:</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.x_titulacion"></span></div>
                                    </div>
                                </div>
                                <!--Segunda Columna-->
                                <div class="col-6">
                                    <div class="row">
                                        <div class="col-4"><strong>Nacimiento:</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.x_annonacimiento"></span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"><strong>País:</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.country_id"></span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"><strong>Estado:</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.state_id"></span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"><strong>C.P:</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.zip_sat_id"></span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"><strong>Teléfono Fijo;</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.phone"></span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"><strong>Asesor</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.user_id.name"></span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"><strong>Finalizados</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.x_finalizacionestudios"></span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"><strong>Profesión:</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.x_profesion"></span></div>
                                    </div>
                                </div>
                            </div>
                            <!--############################Segunda seccion#########################################-->
                            <hr style="border:3px solid #547494; margin-bottom:1px;"></hr>
                            <div class="row">
                                <!--#547494 <- Azul del HR-->
                                <div class="col-4" style="background-color: #fc6c04">
                                    <strong style="color:white; margin-left:5px;">DATOS DE FACTURACIÓN</strong>
                                </div>
                            </div>
                            <div id="personal_information"  class="row">
                                <!--Primera Columna-->
                                <div class="col-6">
                                    <div class="row">
                                        <div class="col-4"><strong>Nombre:</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.name"></span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"><strong>RFC/Pasaporte:</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.vat"></span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"><strong>Movil:</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.mobile"></span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"><strong>Teléfono Fijo;</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.phone"></span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"><strong>Email:</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.email"></span></div>
                                    </div>
                                </div>
                                <!--Segunda Columna-->
                                <div class="col-6">
                                    <div class="row">
                                        <div class="col-4"><strong>Domicilio:</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.street"></span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"><strong>Población:</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.city"></span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"><strong>País:</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.country_id"></span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"><strong>Estado:</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.state_id"></span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4"><strong>C.P:</strong></div>
                                        <div class="col-8"><span t-field="o.partner_id.zip_sat_id"></span></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>