<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <report id="report_prematricula_isep_latm"
                model="sale.order"
                string="Prematricula ISEP LATAM"
                report_type="qweb-pdf"
                name="isep_reports_custom.prematricula_isep_latam"
                menu="True"/>

        <template id="assets_backend" inherit_id="web.assets_backend">
             <xpath expr="." position="inside">
                 <link rel="stylesheet" href="/isep_reports_custom/static/src/css/sheet.css"/>
             </xpath>
        </template>

        <template id="prematricula_isep_latam">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <div>
                            <img class="img-fluid logo" style="height:125px;padding-top:2px;" src="/isep_reports_custom/static/src/img/logo_isep.png"/>
                            <img src="/isep_reports_custom/static/src/img/tel.png"/>
                            <strong style="color:#fc6c04;">+34 934 87 77 77</strong>
                            <img src="/isep_reports_custom/static/src/img/mail.png"/>
                            <strong style="color:#fc6c04;">Barcelona@isep.es</strong>
                            <img src="/isep_reports_custom/static/src/img/web.png"/>
                            <strong style="color:#fc6c04;">http://www.isep.es/</strong>
                            <img src="/isep_reports_custom/static/src/img/cif.png"/>
                            <strong style="color:#fc6c04;">B61254314</strong>
                        </div>

                        <div class="col-5 title" style="background-color: #fc6c04;border-bottom-right-radius:5px;">
                                    <strong style="color:white; margin-left:5px;">DATOS PERSONALES DEL ALUMNO</strong>
                        </div>

                        <div id="personal_information" class="row personal_information" style="font-size:13px;">
                            <!-- First row-->
                            <div class="row">
                            <!--First columna-->
                            <div class="col-6">
                                <strong>Nombre:</strong><br/>
                                <strong>DNI/Pasaporte:</strong><br/>
                                <strong>Domicilio:</strong><br/>
                                <strong>Población:</strong><br/>
                                <strong>Movil:</strong><br/>
                                <strong>Email:</strong><br/>
                                <strong>Centro:</strong><br/>
                                <strong>Estudios:</strong>
                            </div>
                            <!--Second column-->
                            <div class="col-6">
                                <span t-field="o.partner_id.name"/><br/>
                                <t t-if="o.partner_id.vat">
                                    <span t-field="o.partner_id.vat"></span><br/>
                                </t>
                                <t t-else="">
                                    <span t-field="o.partner_id.num_reg_trib"></span><br/>
                                </t>
                                <span t-field="o.partner_id.street"/><br/>
                                <span t-field="o.partner_id.city"/><br/>
                                <span t-field="o.partner_id.mobile"/><br/>
                                <span t-field="o.partner_id.email"/><br/>
                                <span t-field="o.partner_id.x_universidad"/><br/>
                                <span t-field="o.partner_id.x_titulacion"/>
                            </div>
                            <!--Third column-->
                            <div class="col-6">
                                <strong>Nacimiento:</strong><br/>
                                <strong>País:</strong><br/>
                                <strong>Estado:</strong><br/>
                                <strong>C.P:</strong><br/>
                                <strong>Teléfono Fijo:</strong><br/>
                                <strong>Asesor</strong><br/>
                                <strong>Finalizados</strong><br/>
                                <strong>Profesión:</strong><br/>
                            </div>
                            <!--Fourth column-->
                            <div class="col-6">
                                <span t-field="o.partner_id.x_annonacimiento"/><br/>
                                <span t-field="o.partner_id.country_id"/><br/>
                                <span t-field="o.partner_id.state_id"/><br/>
                                <span t-field="o.partner_id.zip"/><br/>
                                <span t-field="o.partner_id.phone"/><br/>
                                <span t-field="o.partner_id.user_id.name"/><br/>
                                <span t-field="o.partner_id.x_finalizacionestudios"/><br/>
                                <span t-field="o.partner_id.x_profesion"/><br/>
                            </div>
                            </div><!--First row-->


                        </div> <!--"personal_information"-->

                        <div class="col-5 title" style="background-color: #fc6c04;border-bottom-right-radius:5px;">
                                    <strong style="color:white; margin-left:5px;">DATOS DE FACTURACIÓN</strong>
                        </div>

                        <div class="col-5 title" style="background-color: #fc6c04;border-bottom-right-radius:5px;">
                                    <strong style="color:white; margin-left:5px;">DATOS DE FACTURACIÓN</strong>
                        </div>

                        <div class="col-5 title" style="background-color: #fc6c04;border-bottom-right-radius:5px;">
                                    <strong style="color:white; margin-left:5px;">CONDICIONES ACEPTADAS PARA EL PAGO DEL CURSO</strong>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>