<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_practice_tutor_tree" model="ir.ui.view">
            <field name="name">practice.tutor.tree</field>
            <field name="model">practice.tutor</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Tutor">
                    <field name="dni"/>
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>

        <record id="view_practice_tutor_form" model="ir.ui.view">
            <field name="name">practice.tutor.form</field>
            <field name="model">practice.tutor</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Tutor">
                    <sheet>
                        <field name="name" placeholder="Name" required="1" invisible="1"/>
                        <group col="4">
                            <field name="dni"/>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="email"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_practice_tutor_search" model="ir.ui.view">
            <field name="name">practice.tutor.search</field>
            <field name="model">practice.tutor</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Tutor">
                    <field name="dni"/>
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="email"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_practice_tutor_view">
            <field name="name">tutor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">practice.tutor</field>
            <field name="view_type">form</field>
            <field name="view_mode">activity,form,tree</field>
            <field name="search_view_id" ref="view_practice_tutor_search"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_practice_tutor_form">
            <field name="act_window_id" ref="act_open_practice_tutor_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_practice_tutor_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_practice_tutor_tree">
            <field name="act_window_id" ref="act_open_practice_tutor_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_practice_tutor_tree"/>
        </record>

    </data>
</odoo>