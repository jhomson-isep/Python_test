<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_practice_tutor_course_tree" model="ir.ui.view">
            <field name="name">practice.tutor_course.tree</field>
            <field name="model">practice.tutor.course</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Association tutor_course">
                    <field name="op_course_id"/>
                    <field name="practice_tutor_id"/>
                </tree>
            </field>
        </record>

        <record id="view_practice_tutor_course_form" model="ir.ui.view">
            <field name="name">practice.tutor_course.form</field>
            <field name="model">practice.tutor.course</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Association tutor_course">
                    <sheet>
                        <group col="4">
                            <field name="op_course_id" />
                            <field name="practice_tutor_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_practice_tutor_course_search" model="ir.ui.view">
            <field name="name">practice.tutor_course.search</field>
            <field name="model">practice.tutor.course</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Association tutor course">
                    <field name="op_course_id"/>
                    <field name="practice_tutor_id"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_practice_tutor_course_view">
            <field name="name">tutor_course</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">practice.tutor.course</field>
            <field name="view_type">form</field>
            <field name="view_mode">activity,form,tree</field>
            <field name="search_view_id" ref="view_practice_tutor_course_search"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_practice_tutor_course_form">
            <field name="act_window_id" ref="act_open_practice_tutor_course_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_practice_tutor_course_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_practice_tutor_course_tree">
            <field name="act_window_id" ref="act_open_practice_tutor_course_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_practice_tutor_course_tree"/>
        </record>

    </data>
</odoo>