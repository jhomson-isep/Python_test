<odoo>
    <data>
        <!-- Add Team manager to helpdesk Team -->
        <record model="ir.ui.view" id="helpdesk_team_manager_id">
            <field name="name">helpdesk.team.manager.id</field>
            <field name="model">helpdesk.team</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_team_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='productivity']" position="inside">
                    <div class="col-lg-6 o_setting_box"
                         title="Assign a manager to this team. The manager
                         will receive emails for tickets that needs to be
                         escalated for violating SLA.">
                        <div class="o_setting_right_pane">
                            <span class="fa fa-3x fa-user pull-right"/>
                            <label for="manager_id"/>
                            <div class="text-muted">
                                Assign a manager to this team. The manager will
                                receive emails for tickets that needs to be
                                escalated for violating SLA.
                            </div>
                            <div>
                                <field name="manager_id" class="mt16"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
